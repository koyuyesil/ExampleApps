<Window x:Class="DeviceListing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceListing"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <ListBox x:Name="listBox" Margin="593,10,32,10" d:ItemsSource="{d:SampleData ItemCount=5}" />
        <TextBox x:Name="tbxDisks" Margin="10,10,0,10" Text="TextBox" HorizontalAlignment="Left" Width="578"/>
    </Grid>
</Window>
